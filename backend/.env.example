# CanvasConnect Backend Configuration

# Flask Environment
FLASK_ENV=development
FLASK_DEBUG=True

# Server Configuration  
PORT=5000
HOST=0.0.0.0

# CORS Origins (comma-separated for production)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://your-frontend-domain.com

# Database Configuration (if using a database in future)
# DATABASE_URL=sqlite:///canvasconnect.db
# DATABASE_URL=postgresql://username:password@localhost/canvasconnect

# Redis Configuration (for production scaling)
# REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your-secret-key-here-change-in-production

# Logging
LOG_LEVEL=INFO
